package egovframework.example.products.web;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import egovframework.example.cmmn.JsonUtil;
import egovframework.example.products.service.ProductsService;
import egovframework.rte.psl.dataaccess.util.EgovMap;



@Controller
public class ProductsController {
	
	private final Logger log = LoggerFactory.getLogger(getClass());
	
	@Resource
	private ProductsService productsService;

	@RequestMapping(value="/CategoryConfig.do")
	public String initProductCatConfig(ModelMap model) throws Exception {
		
		List<EgovMap> shopCatList = productsService.selectShopCatList();
		
		System.out.println(shopCatList);
		
		log.debug("ProductsController Debug Shop Category List");
		
		model.addAttribute("shopCatList", shopCatList);
		
		return "products/shopCatConfig";
	}
	
	@RequestMapping(value = "/ProductsInfo.do")
	public String initProductsInfo(ModelMap model) throws Exception {
		 
		List<EgovMap> catList 		= productsService.selectShopCatList();
		List<EgovMap> productsList	= productsService.selectProductsList();
		
		log.debug("ProductsController Debug Shop Category List");
		
		System.out.println(catList);
		System.out.println(productsList);
		
		model.addAttribute("catList", catList);
		model.addAttribute("productsList", productsList);
		
		return "products/productsInfo";
	}
	
	@RequestMapping(value = "/ProductsAdd.do")
	public String initProductsAdd() throws Exception {
		
		return "products/productsAdd";
	}
		
	@RequestMapping(value="/savePrdCat.do", produces = "text/plain; charset=utf-8")
	@ResponseBody
	public String savePrdCat(@RequestParam Map<String, Object> map) throws Exception {
		System.out.println(map);
		
		EgovMap result = productsService.savePrdCat(map);
		
		List<EgovMap> prdCatList = productsService.selectShopCatList();
		System.out.println(prdCatList);
		
		result.put("prdCatList", prdCatList);
		
		return JsonUtil.EgovMapToJson(result);
	}
}
