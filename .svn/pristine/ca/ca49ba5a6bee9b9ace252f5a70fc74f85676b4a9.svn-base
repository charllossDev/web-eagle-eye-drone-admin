$(document).ready(function(){
	//admin login vertical center
	loginWrap_top();
	function loginWrap_top(){
		var wh = $(window).height();
		var loginWrap_top = (wh / 2) - ( 370 / 2); // find id/pw layerPop height
		$('.loginWrap').css({'margin-top':loginWrap_top});
	}
	$(window).resize(function(){
		loginWrap_top();
	});

	// 아이디저장 enter
	$('input[type="checkbox"]').keypress(function(e){
		if((e.keyCode ? e.keyCode : e.which) == 13){
			$(this).trigger('click');
		}
		return false;
	});

	//아이디/비밀번호 찾기 팝업
	$('#btn_find').click(function(){
		$('.layerPop').css({'display':'block'});
	});
	$('.btn_popClose').click(function(){
		$('.layerPop').css({'display':'none'});

		// 팝업을 닫을 때, 입력 했던 값을 초기화
		$.each($('.layerPop').find("input:text"), function(i, v) {
			var $input 	= $(this);
			$input.val("");
		});

		// 팝업을 닫을 때, 선택된 탭을 초기화
		if($('.tabPwdSearch').hasClass('on')) {
			$('.tabIdSearch').addClass('on');
			$('.tabPwdSearch').removeClass('on');
		}
	});

	//tab
	//var tab_h = $('.tab li.on').find('.tabCon').height() + $('.tab li').height();
	//$('.tab').css('height',tab_h);
	$('.tab li').click(function(){
		//var tab_h = $(this).find('.tabCon').height() + $('.tab li').height();
		//$(this).parent().css('height',tab_h);
		$(this).siblings().removeClass('on');
		$(this).addClass('on');
	});

	//lnb
	$('#lnb .depth2 > li > a').click(function(){
		$(this).parent().find('.depth3').slideToggle();
		$(this).toggleClass('on');
	});
	$('#lnb .depth3 > li.on').parent().css({'display':'block'});
	$('#lnb .depth3 > li.on').parent().siblings().addClass('on');
	$('#lnb .depth1 li > a').click(function(){
		return false;
	});

	//select box custom
	$(function() {
	  $('select').selectric();
	});

	//datepicker
	$("#datepicker1").datepicker({
		trigger: '.datepicker-wrap1',
	});
	$("#datepicker2").datepicker({
		trigger: '.datepicker-wrap2',
	});
});