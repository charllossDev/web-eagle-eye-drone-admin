<script>

var treeViewCls = {
		
	initEventFn			: function() {
		
		$(".node-treeview5").on("click", function() {
			var $this = $(this);
			
			$this.parent().find("li").each(function() {
				var $eachThis = $(this);
				
				$eachThis.removeClass("node-selected");
				$eachThis.css("color", "#6c757d");
				$eachThis.css("background-color", "#FFFFFF");
			});
	
			$this.addClass("node-selected");
			$this.css("color", "#FFFFFF");
			$this.css("background-color", "#03a9f3");
			
			if ($this.data("nodeid") === "all") {
				
				$(".productsCardItem").each(function() {
					var $eachThis = $(this);
				
					$eachThis.show();
				});
				
			} else {
				
				$(".productsCardItem").each(function() {
					var $eachThis = $(this);
				
					$eachThis.hide();
					
					if ($this.data("nodeid") === $eachThis.data("code")) {
						
						$eachThis.show();
						
					}
				});

			}
	
		});
		
		$(".expand-icon").on("click", function() {
			var $this = $(this);
			
			if ($this.hasClass("ti-angle-down")) {
				
				$this.removeClass("ti-angle-down");
				$this.addClass("ti-angle-right");
				
				$(".indent").each(function() {
					var $eachThis = $(this);
					
					$eachThis.parent().hide();
					
				})
				
			} else {				
				
				$this.removeClass("ti-angle-right");
				$this.addClass("ti-angle-down");
				
				$(".indent").each(function() {
					var $eachThis = $(this);
					
					$eachThis.parent().show();
					
				})
			}
		});
	}
}


$(function() {
	
	treeViewCls.initEventFn();
	
});

</script>
    
<div class="card">
    <div class="card-body">
        <div class="row">
     
            <div class="col-md-4 col-xs-12">
                <h4 class="card-title">Product Category</h4>
                <div id="categoryTreeView" class="treeview">
                    <ul class="list-group">

                        <li class="list-group-item node-treeview5 node-selected" data-nodeid="all" style="color:#FFFFFF;background-color:#03a9f3;">
                        	<span class="icon expand-icon ti-angle-down"></span>
                        	<span class="icon node-icon fa fa-bookmark"></span> 
                        	ALL
                       	</li>
                       	
						<c:forEach items="${catList}" var="catList" varStatus="status"> 
                       		<c:if test="${catList.upprCatCd eq 'C000000000'}">
								<li class="list-group-item node-treeview5" data-nodeid="<c:out value='${catList.catCd}'/>" style="color:undefined;background-color:undefined;">
									<span class="indent"></span><span class="icon glyphicon"></span>
									<span class="icon node-icon fa fa-bookmark"></span>
								<c:out value="${catList.catEngNm}"/>
								</li>								
                       		</c:if>
                        </c:forEach>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row el-element-overlay">
         
     <c:forEach items="${productsList}" var="productsList" varStatus="status">
     
